<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaActivity">

    <com.chiron.playpalyer.widget.PlayerTextureView
        android:id="@+id/tv_player"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"/>

    <SurfaceView
        android:id="@+id/sv_player"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/sv_player"
        app:layout_constraintLeft_toLeftOf="@+id/sv_player"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/selector" />

    <ImageButton
        android:id="@+id/replay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/play_button"
        app:layout_constraintBottom_toBottomOf="@+id/sv_player"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_playback_repeat"
        android:visibility="gone"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/sv_player"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:onClick="clickRepack"
        android:text="重打包"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>